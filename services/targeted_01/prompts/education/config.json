{
  "question_id": "education",
  "display_name": "Education Trajectory",
  "output_filename_suffix": "education",
  "skip_if_null": [],

  "retrieval": {
    "query_template": "{PERSON_NAME} university degree education BA MA PhD diploma studies graduated",
    "similarity_top_k": 20,
    "similarity_threshold": 0.15,
    "rerank_top_n": 10
  },

  "extraction": {
    "model": "command-a-03-2025",
    "temperature": 0.2,
    "max_tokens": 1500,
    "max_chunks_to_scan": 8,
    "high_confidence_early_stop": false,
    "primary_list_field": "degrees_found"
  },

  "verification": {
    "max_verification_chunks": 3,
    "exclude_primary_domain": true,
    "candidate_title_field": "degrees_found",
    "candidate_org_field": "elite_institutions_found"
  },

  "prompts": {
    "extraction": "prompts/education/extraction.txt",
    "verification": "prompts/education/verification.txt"
  }
}
