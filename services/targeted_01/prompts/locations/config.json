{
  "question_id": "locations",
  "display_name": "Main Locations (Geographical Mobility)",
  "output_filename_suffix": "locations",
  "skip_if_null": [],

  "retrieval": {
    "query_template": "{PERSON_NAME} lived based located city country worked residence office career",
    "similarity_top_k": 20,
    "similarity_threshold": 0.15,
    "rerank_top_n": 10
  },

  "extraction": {
    "model": "command-a-03-2025",
    "temperature": 0.2,
    "max_tokens": 1500,
    "max_chunks_to_scan": 8,
    "high_confidence_early_stop": false,
    "primary_list_field": "locations"
  },

  "verification": {
    "max_verification_chunks": 3,
    "exclude_primary_domain": true,
    "candidate_title_field": "locations",
    "candidate_org_field": "countries"
  },

  "prompts": {
    "extraction": "prompts/locations/extraction.txt",
    "verification": "prompts/locations/verification.txt"
  }
}
